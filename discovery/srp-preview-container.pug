include component/header.pug
include component/jobdetail.pug
include component/intercom.pug
include component/logo-jobsdb.pug
include component/preview-elements.pug
include data/jobdetail.pug

- var expireDate = Math.floor(Math.random()*30 + 1)
- var postTime = Math.floor(Math.random()*60 + 1)
- var navItem = ['My jobsDB', 'Resources', 'Career Insights']

//- SRP page starts here
html
head
    +header("Search Result Page")
  body
    .d-flex.flex-column(style="max-height: 100vh;")
      //- header
      .container
        +navigation(navItem)
      //-  search input form
      +searchInput('compact')
      .d-flex
        //- job listing
        div(style="width:440px; overflow: scroll")
          .joblisting
            .mt-3
              .p-2 1-15 of 58584 jobs
              each jobad in jobdetail
                +jobcard(jobad)
            .text-center.pt-3.pb-3
              .btn-group
                button.btn.btn-secondary Prev
                button.btn.btn-secondary 1
                button.btn.btn-secondary Next
            //- footer
            +footer()          

        //- preview panel
        div#preview-container(style="flex:1; overflow: scroll; position: relative")
          .preview-action-bar
            .row
              .col
                button.btn.btn-primary Apply Now
                a#jobad-newtab.btn.btn-link(href="#" target="_blank") View in new tab
              //- .col.text-right
                button.btn.btn-link Close
          .p-3.bg-grey
            each jobad in jobdetail
              +preview(jobad)
    +intercom()